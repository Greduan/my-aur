# Maintainer: Greduan <eduan@websharks-inc.com>

pkgname=swifer-git
_pkgname=swifer
pkgver=20140226.41d5f91
pkgrel=1
epoch=1
pkgdesc='A fast floating WM written over the XCB library and derived from mcwm'
arch=('i686' 'x86_64')
url='https://github.com/TrilbyWhite/swifer'
license=('GPLv3')
depends=('wireless_tools' 'wpa_supplicant' 'dhcpcd' 'ncurses')
makedepends=('git')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
backup=('etc/swifer.conf')
source=('git://github.com/TrilbyWhite/swifer.git')
sha1sums=('SKIP')

pkgver() {
	cd "${srcdir}/${_pkgname}"
	git log -1 --format='%cd.%h' --date=short | tr -d -
}

build() {
	cd "${srcdir}/${_pkgname}"
	make
}

package() {
	cd "${srcdir}/${_pkgname}"
	make PREFIX=/usr DESTDIR="${pkgdir}" install
}
